    <!-- Vue.js -->
    <script src="https://unpkg.com/vue@3/dist/vue.global.js"></script>
    
    <!-- Vuetify -->
    <script src="https://cdn.jsdelivr.net/npm/vuetify@3.4.7/dist/vuetify.min.js"></script>
    
    <script>
        const { createApp } = Vue
        const { createVuetify } = Vuetify

        // Create Vuetify instance with custom theme
        const vuetify = createVuetify({
            theme: {
                defaultTheme: 'customLight',
                themes: {
                    customLight: {
                        dark: false,
                        colors: {
                            primary: '#1B263B',
                            'primary-darken-1': '#0F1419',
                            secondary: '#415A77',
                            'secondary-darken-1': '#334661',
                            accent: '#778DA9',
                            success: '#1B7F75',
                            'success-darken-1': '#155E56',
                            warning: '#D67E3B',
                            'warning-darken-1': '#B8692F',
                            error: '#C62D42',
                            'error-darken-1': '#A8253A',
                            info: '#2856A3',
                            'info-darken-1': '#1E4285',
                            background: '#FAFAFA',
                            surface: '#FFFFFF',
                            'surface-variant': '#F5F5F5',
                            'on-primary': '#FFFFFF',
                            'on-secondary': '#FFFFFF',
                            'on-success': '#FFFFFF',
                            'on-warning': '#FFFFFF',
                            'on-error': '#FFFFFF',
                            'on-info': '#FFFFFF',
                            'on-background': '#1B263B',
                            'on-surface': '#1B263B'
                        }
                    },
                    customDark: {
                        dark: true,
                        colors: {
                            primary: '#60A5FA',
                            'primary-darken-1': '#3B82F6',
                            secondary: '#A78BFA',
                            'secondary-darken-1': '#8B5CF6',
                            accent: '#94A3B8',
                            success: '#4CAF50',
                            'success-darken-1': '#388E3C',
                            warning: '#FF9800',
                            'warning-darken-1': '#F57C00',
                            error: '#F44336',
                            'error-darken-1': '#D32F2F',
                            info: '#42A5F5',
                            'info-darken-1': '#1976D2',
                            background: '#121212',
                            surface: '#1E1E1E',
                            'surface-variant': '#2D2D2D',
                            'on-primary': '#000000',
                            'on-secondary': '#000000',
                            'on-success': '#000000',
                            'on-warning': '#000000',
                            'on-error': '#FFFFFF',
                            'on-info': '#000000',
                            'on-background': '#FFFFFF',
                            'on-surface': '#FFFFFF'
                        }
                    }
                }
            },
            defaults: {
                VBtn: {
                    style: 'text-transform: none; font-weight: 500;',
                    variant: 'flat'
                },
                VCard: {
                    elevation: 0,
                    class: 'guideline-card'
                },
                VSheet: {
                    elevation: 0
                },
                VAppBar: {
                    elevation: 0,
                    class: 'app-bar'
                },
                VTextField: {
                    variant: 'outlined',
                    hideDetails: 'auto'
                },
                VTextarea: {
                    variant: 'outlined',
                    hideDetails: 'auto'
                }
            }
        })

        // Create Vue app
        const app = createApp({
            data() {
                return {
                    isDarkMode: false,
                                         currentPage: 'welcome',
                                         expandedGroups: [],
                                         subdomain: 'z3n-demo.zendesk.com',
                    
                    companyInfo: {
                        name: '',
                        description: '',
                        issues: '',
                        aiInstructions: ''
                    }
                }
            },

            computed: {
                currentTheme() {
                    return this.isDarkMode ? 'customDark' : 'customLight'
                },
                
                                 currentPageTitle() {
                     const titles = {
                         'welcome': 'Welcome',
                         'build': 'Build',
                         'generate': 'Generate',
                         'manage': 'Manage',
                         'discover': 'Discover',
                         'experiment': 'Experiment',
                         'authentication': 'Authentication',
                         'personalization': 'Personalization'
                     }
                     return titles[this.currentPage] || 'Demo Studio'
                 }
            },

            methods: {
                toggleTheme() {
                    this.isDarkMode = !this.isDarkMode
                    this.$vuetify.theme.global.name = this.currentTheme
                    document.documentElement.setAttribute('data-theme', this.isDarkMode ? 'dark' : 'light')
                    localStorage.setItem('theme', this.isDarkMode ? 'dark' : 'light')
                },

                initializeTheme() {
                    const savedTheme = localStorage.getItem('theme')
                    const systemPrefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches
                    
                    this.isDarkMode = savedTheme ? savedTheme === 'dark' : systemPrefersDark
                    this.$vuetify.theme.global.name = this.currentTheme
                    document.documentElement.setAttribute('data-theme', this.isDarkMode ? 'dark' : 'light')
                },

                navigateToPage(page) {
                    this.currentPage = page
                },

                toggleGroup(groupId) {
                    const index = this.expandedGroups.indexOf(groupId)
                    if (index > -1) {
                        this.expandedGroups.splice(index, 1)
                    } else {
                        this.expandedGroups.push(groupId)
                    }
                },

                isGroupExpanded(groupId) {
                    return this.expandedGroups.includes(groupId)
                },

                // GenAI helper functions
                generateCompanyName() {
                    this.companyInfo.name = 'TechCorp Solutions Inc.'
                },

                generateBusinessDescription() {
                    this.companyInfo.description = 'TechCorp Solutions is a leading software development company specializing in enterprise solutions, cloud infrastructure, and digital transformation services. We help organizations modernize their technology stack and improve operational efficiency through innovative software solutions.'
                },

                generateIssues() {
                    this.companyInfo.issues = 'Common issues include legacy system integration challenges, data migration complexities, user adoption resistance, performance optimization needs, and security compliance requirements. Teams often struggle with technical debt, scalability issues, and cross-platform compatibility.'
                },

                generateAIInstructions() {
                    this.companyInfo.aiInstructions = 'The AI should maintain a professional yet approachable tone during demos. Focus on business value and ROI rather than technical details. Use industry-specific examples and relate features to common pain points. Always ask clarifying questions to better understand the prospect\'s specific needs.'
                }
            },

            mounted() {
                this.initializeTheme()
                
                window.matchMedia('(prefers-color-scheme: dark)').addEventListener('change', (e) => {
                    if (!localStorage.getItem('theme')) {
                        this.isDarkMode = e.matches
                        this.$vuetify.theme.global.name = this.currentTheme
                        document.documentElement.setAttribute('data-theme', this.isDarkMode ? 'dark' : 'light')
                    }
                })
            }
        })

        // Use Vuetify and mount the app
        app.use(vuetify).mount('#app')
    </script>
</body>
</html>
